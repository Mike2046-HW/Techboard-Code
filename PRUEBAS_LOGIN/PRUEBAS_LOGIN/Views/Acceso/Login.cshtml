@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <style>
        /* Estilo del fondo y tarjeta de login */
        body {
            background: linear-gradient(135deg, #4ecca3, #393e46);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            font-family: Arial, sans-serif;
        }

        .card {
            background-color: rgba(0, 0, 0, 0.8);
            border-radius: 15px;
            width: 350px;
            padding: 20px;
        }

        .card-header {
            text-align: center;
        }

            .card-header h3 {
                color: #fff;
            }

        .input-group-text {
            background: #4ecca3;
            border: none;
            color: white;
        }

        .form-control {
            background: #e0f7fa;
            border: none;
        }

        .btn-login {
            background-color: #4ecca3;
            color: white;
            border-radius: 5px;
            width: 100%;
            margin-top: 10px;
        }

        .card-footer {
            text-align: center;
            font-size: 0.9em;
        }

            .card-footer a {
                color: #4ecca3;
                text-decoration: none;
            }

        /* Estilo para el logo */
        .logo img {
            width: 500px; /* Tamaño del logo  */
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <div class="logo">
                        <img src="~/Images/TECHBOARD.png" class="img-fluid rounded shadow my-4" alt="Techboard Logo">
                    </div>
                    <h3>Bienvenido</h3>
                    <p>Por favor, ingresa tus datos para acceder</p>
                </div>
                <div class="card-body">
                    <form action="@Url.Action("Login", "Acceso")" method="post">
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="text" name="Correo" class="form-control" placeholder="Correo" value="@Request.Cookies["Correo"]">
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            </div>
                            <input type="password" name="Clave" class="form-control" placeholder="Contraseña" required>
                        </div>

                        @if (ViewData["mensaje"] != null)
                        {
                            <div class="alert alert-danger mt-2" role="alert">
                                @ViewData["mensaje"]
                            </div>
                        }
                        <button type="submit" class="btn btn-login">Ingresar</button>
                    </form>
                </div>
                <div class="card-footer">
                    ¿No tienes una cuenta? <a href="@Url.Action("Registrar","Acceso")">Regístrate</a>
                </div>
            </div>
        </div>
    </div>

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</body>
</html>